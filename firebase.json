{
  "firestore": {
    "rules": "settings/firestore/firestore.rules",
    "indexes": "settings/firestore/firesore.indexes.json"
  },
  "hosting": {
    "public": "public",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "firestore": {
      "port": 8088
    },
    "hosting": {
      "port": 7077
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true
  }
}
